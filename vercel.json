{
  "version": 2,
  "builds": [
    {
      "src": "src/vercel.py",
      "use": "@vercel/python"
    },
    {
      "src": "src/ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/room|/connect|/status/.*",
      "dest": "src/vercel.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "src/ui/dist/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "src/vercel.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  }
}
